<div class="container">
  <br/>
  <div class="mentor-row">
    <div class="col-md-5 col-md-offset-1 blog-sidebar">
      <div class="sidebar-module">
        <%= image_tag @mentor.photo.url(:medium), class: "img-circle" %>
        <h4>Email: <%= @mentor.email %></h4>
        <h4>Employer: <%= @mentor.company %></h4>
        <h4>Best at: <% @mentor.skills.each do |skill| %>
          <i><%= skill.name  %></i>&nbsp
          <% end %></h4>
      </div>
      <div class="col-md-5">
        <h2><%= @mentor.name %></h2>
        <p><%= @mentor.bio %></p>
        <p>
          <% if @mentor.preference == "email" %>
            <%= link_to "Reach out to #{@mentor.name}", "#emailModal", "data-toggle" => "modal", class: "btn btn-small btn-default" %>
          <% else @mentor.preference == "sms" %>
            <%= link_to "Reach out to #{@mentor.name}", "#smsModal", "data-toggle" => "modal", class: "btn btn-small btn-default" %>
          <% end %>
        </p>
        <%= render "modals/email_appointment_modal" %>
        <%= render "modals/sms_appointment_modal" %>
      </div>
    </div>
  </div>
</div>
