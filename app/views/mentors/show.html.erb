<div class="container">
  <br/>
  <div class="mentor-row">
    <div class="col-md-5 col-md-offset-1 blog-sidebar">
      <div class="sidebar-module">
        <%= image_tag @mentor.photo.url(:medium), class: "img-circle" %>
        <h4>Email: <%= @mentor.email %></h4>
        <h4>Employer: <%= @mentor.company %></h4>
        <h4>Best at: <% @mentor.skills.each do |skill| %>
          <i><%= skill.name  %></i>&nbsp
          <% end %></h4>
      </div>
      <div class="col-md-5">
        <h2><%= @mentor.name %></h2>
        <p><%= @mentor.bio %></p>
        <p>
          <%= link_to "Request Appointment", "#apptModal", "data-toggle" => "modal", class: "btn btn-small btn-default" %>
        </p>
        <%= render "modals/appointment_modal" %>
      </div>
    </div>
  </div>
</div>


<script>$('#myModal').modal(options)</script>
