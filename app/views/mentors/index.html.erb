  <div class="container marketing">
    <h2>Filter Mentors by Skills</h2>
    <div class="btn-toolbar" role="toolbar" aria-label="...">
      <div class="btn-group" role="group" aria-label="...">
        <% @skills.each do |s| %>
          <%= link_to s.name, mentors_path(filter: s.name), class: "btn btn-primary" %>
        <% end %>
      </div
      <div class="btn-group" role="group" aria-label="...">
        <%= link_to "All Mentors", mentors_path, class: "btn btn-primary" %>
      </div>
      <br/>
      <br/>
      <br/>
    </div>

<div class="row">
  <% cache @mentors do %>
    <% @mentors.each do |m| %>
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <%= image_tag m.photo.url(:thumb), class: "img-circle" %>
      <div class="caption">
        <h3><%= link_to m.name, mentor_path(m) %></h3>
        <p>
          <% m.skills.each do |skill| %>
            <%= skill.name %> &nbsp
          <% end %>
        </p>
      </div>
    </div>
  </div>
    <% end %>
  <% end %>
</div>
