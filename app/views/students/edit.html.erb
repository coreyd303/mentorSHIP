<h2><center>A Bit About You:</center></h2>
<%= form_for(@student, html: { :class => "form-horizontal"}) do |f| %>
  <div class="form-group">
    <%= f.label "Name:", class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Bio Blurb:", class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.text_area :bio, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Cohort:", class: "col-sm-2 control-label" %>
    <div class="col-sm-2">
      <%= f.text_field :cohort, class: "control-label" %>
    </div>
    <div class="form-group">
      <%= f.label "Module:", class: "control-label" %>
      <%= f.select(:module_id, options_for_select([['Module One', 1], ['Module Two', 2], ['Module Three', 3], ['Module Four', 4],]), {}, { class: "control-label select" } )%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "Photo:", class: "col-sm-2 control-label" %>
    <div class="col-sm-8">
      <%= f.file_field :avatar, class: "form-control" %>
    </div>
  </div>
  <br/>
  <div class="form-group">
    <%= f.submit "Save Profile", class: "btn btn-large btn-info center-button" %>
  </div>
<% end %>
